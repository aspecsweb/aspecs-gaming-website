---
import Layout from "@/layouts/Layout.astro";

const apiKey = import.meta.env.ITCHIO_KEY;
if (!apiKey) throw new Error("ItchIO API Key is missing");

const fetchAssets = async () => {
  try {
    const response = await fetch(`https://itch.io/api/1/${apiKey}/my-games`);
    const data = await response.json();
    data.games.sort(
      (a: any, b: any) =>
        new Date(b.published_at).getTime() - new Date(a.published_at).getTime(),
    );
    return data.games;
  } catch (error) {
    console.error("Error fetching assets:", error);
    return [];
  }
};

const assets = await fetchAssets();
---

<Layout>
  <main class="bg-white min-h-screen">
    <div class="relative mx-auto px-8 max-w-7xl py-12 md:px-12">
      <div class="flex flex-col lg:flex-row gap-12">
        <!-- FIXED LEFT SIDEBAR WITH FILTERS -->
        <aside class="w-full lg:w-64 flex-shrink-0">
          <div
            class="sticky top-24 rounded-2xl border border-charcoal-100 bg-charcoal-50 p-6 shadow-sm"
          >
            <h2
              class="mb-6 text-sm font-bold uppercase tracking-widest text-charcoal-900"
            >
              Filters & Sort
            </h2>

            <!-- PRICE FILTER -->
            <div class="mb-6">
              <label
                class="mb-2 block text-xs font-bold text-charcoal-500 uppercase"
                >Price</label
              >
              <select
                id="price"
                class="w-full rounded-lg bg-white px-3 py-2 text-charcoal-900 border border-charcoal-200 focus:ring-2 focus:ring-tomato-500/20 focus:border-tomato-500 outline-none transition-all"
              >
                <option value="">All Prices</option>
                <option value="free">Free</option>
                <option value="paid">Paid</option>
              </select>
            </div>

            <div class="mb-6 border-t border-charcoal-200 pt-6">
              <label
                class="mb-2 block text-xs font-bold text-charcoal-500 uppercase"
                >Sort By</label
              >

              <!-- SORT TYPE -->
              <select
                id="sortType"
                class="w-full rounded-lg bg-white px-3 py-2 text-charcoal-900 border border-charcoal-200 mb-3 outline-none focus:border-tomato-500"
              >
                <option value="published">Published Date</option>
                <option value="downloads">Downloads</option>
                <option value="views">Views</option>
              </select>

              <!-- SORT DIRECTION -->
              <div class="flex gap-2">
                <button
                  id="sortAsc"
                  class="flex-1 rounded-lg bg-white px-3 py-2 text-xs font-bold text-charcoal-600 border border-charcoal-200 hover:bg-charcoal-100 transition-colors"
                >
                  ↑ Asc
                </button>
                <button
                  id="sortDesc"
                  class="flex-1 rounded-lg bg-charcoal-900 px-3 py-2 text-xs font-bold text-white border border-charcoal-900 transition-colors"
                >
                  ↓ Desc
                </button>
              </div>
            </div>

            <!-- RESET BUTTON -->
            <button
              id="reset"
              class="w-full rounded-lg bg-tomato-50 px-3 py-2 text-xs font-bold text-tomato-600 border border-tomato-100 hover:bg-tomato-100 transition-colors uppercase tracking-wider"
            >
              Reset All
            </button>
          </div>
        </aside>

        <!-- MAIN CONTENT AREA -->
        <div class="flex-1">
          <!-- GRID -->
          <div
            class="grid grid-cols-1 gap-x-8 gap-y-16 md:grid-cols-2"
            id="assets-grid"
          >
            {
              assets.map(
                (asset: any) =>
                  asset.published && (
                    <figure
                      class="group"
                      data-free={asset.min_price === 0}
                      data-downloads={asset.downloads_count || 0}
                      data-views={asset.views_count || 0}
                      data-published={new Date(asset.published_at).getTime()}
                    >
                      <a href={`/assets/${asset.id}`} class="block">
                        <div class="overflow-hidden rounded-2xl bg-charcoal-50 aspect-video mb-4">
                          <img
                            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                            src={asset.cover_url}
                            alt={`Cover for ${asset.title}`}
                          />
                        </div>
                        <div class="px-2">
                          <div class="flex justify-between items-start mb-2">
                            <h3 class="text-lg font-bold text-charcoal-900 group-hover:text-tomato-600 transition-colors">
                              {asset.title}
                            </h3>
                            <p class="text-sm font-bold text-tomato-500">
                              {asset.min_price === 0 ? "Free" : "Paid"}
                            </p>
                          </div>
                          <p class="text-sm text-charcoal-500 line-clamp-2 leading-relaxed">
                            {asset.short_text || "No description, just vibes."}
                          </p>
                        </div>
                      </a>
                    </figure>
                  ),
              )
            }
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- FILTER SCRIPT -->
  <script>
    const price = document.getElementById("price") as HTMLSelectElement;
    const sortType = document.getElementById("sortType") as HTMLSelectElement;
    const sortAsc = document.getElementById("sortAsc") as HTMLButtonElement;
    const sortDesc = document.getElementById("sortDesc") as HTMLButtonElement;
    const reset = document.getElementById("reset") as HTMLButtonElement;
    const grid = document.getElementById("assets-grid") as HTMLElement;

    let sortDirection: "asc" | "desc" = "desc";

    const getFigures = () =>
      Array.from(grid.querySelectorAll<HTMLElement>("figure"));

    const updateSortButtons = () => {
      const activeClasses = [
        "bg-charcoal-900",
        "text-white",
        "border-charcoal-900",
      ];
      const inactiveClasses = [
        "bg-white",
        "text-charcoal-600",
        "border-charcoal-200",
      ];

      if (sortDirection === "asc") {
        sortAsc.classList.remove(...inactiveClasses);
        sortAsc.classList.add(...activeClasses);

        sortDesc.classList.remove(...activeClasses);
        sortDesc.classList.add(...inactiveClasses);
      } else {
        sortDesc.classList.remove(...inactiveClasses);
        sortDesc.classList.add(...activeClasses);

        sortAsc.classList.remove(...activeClasses);
        sortAsc.classList.add(...inactiveClasses);
      }
    };

    const apply = () => {
      let figures = getFigures();

      // FILTER
      figures.forEach((f) => {
        const free = f.dataset.free === "true";
        const priceOk =
          !price.value ||
          (price.value === "free" && free) ||
          (price.value === "paid" && !free);

        f.style.display = priceOk ? "" : "none";
      });

      // SORT
      figures = figures.sort((a, b) => {
        let comparison = 0;
        switch (sortType.value) {
          case "downloads":
            comparison =
              Number(b.dataset.downloads) - Number(a.dataset.downloads);
            break;
          case "views":
            comparison = Number(b.dataset.views) - Number(a.dataset.views);
            break;
          default:
            comparison =
              Number(b.dataset.published) - Number(a.dataset.published);
        }
        return sortDirection === "asc" ? -comparison : comparison;
      });

      figures.forEach((f) => grid.appendChild(f));
    };

    price.addEventListener("change", apply);
    sortType.addEventListener("change", apply);

    sortAsc.addEventListener("click", () => {
      sortDirection = "asc";
      updateSortButtons();
      apply();
    });

    sortDesc.addEventListener("click", () => {
      sortDirection = "desc";
      updateSortButtons();
      apply();
    });

    reset.addEventListener("click", () => {
      price.value = "";
      sortType.value = "published";
      sortDirection = "desc";
      updateSortButtons();
      apply();
    });
  </script>
</Layout>
