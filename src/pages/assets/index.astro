---
import Layout from "@/layouts/Layout.astro";

const apiKey = import.meta.env.ITCHIO_KEY;
if (!apiKey) throw new Error("ItchIO API Key is missing");

const fetchAssets = async () => {
  try {
    const response = await fetch(`https://itch.io/api/1/${apiKey}/my-games`);
    const data = await response.json();
    data.games.sort(
      (a, b) =>
        new Date(b.published_at).getTime() - new Date(a.published_at).getTime(),
    );
    return data.games;
  } catch (error) {
    console.error("Error fetching assets:", error);
    return [];
  }
};

const assets = await fetchAssets();
---

<Layout>
  <main>
    <div class="relative mx-auto px-8 max-w-7xl py-12 md:px-12">
      <div class="flex gap-8">
        <!-- FIXED LEFT SIDEBAR WITH FILTERS -->
        <aside class="w-64 flex-shrink-0">
          <div
            class="sticky top-20 rounded-lg border border-negroni-500/20 bg-negroni-950/50 p-6 shadow-lg"
          >
            <h2 class="mb-6 text-lg font-semibold text-negroni-500">
              Filters & Sort
            </h2>

            <!-- PRICE FILTER -->
            <div class="mb-6">
              <label class="mb-2 block text-sm font-medium text-negroni-400"
                >Price</label
              >
              <select
                id="price"
                class="w-full rounded bg-negroni-900 px-3 py-2 text-white border border-negroni-500/30"
              >
                <option value="">All Prices</option>
                <option value="free">Free</option>
                <option value="paid">Paid</option>
              </select>
            </div>

            <div class="mb-6 border-t border-negroni-500/20 pt-6">
              <label class="mb-2 block text-sm font-medium text-negroni-400"
                >Sort By</label
              >

              <!-- SORT TYPE -->
              <select
                id="sortType"
                class="w-full rounded bg-negroni-900 px-3 py-2 text-white border border-negroni-500/30 mb-3"
              >
                <option value="published">Published Date</option>
                <option value="downloads">Downloads</option>
                <option value="views">Views</option>
              </select>

              <!-- SORT DIRECTION -->
              <div class="flex gap-2">
                <button
                  id="sortAsc"
                  class="flex-1 rounded bg-negroni-900 px-3 py-2 text-sm text-white border border-negroni-500/30 hover:bg-negroni-800 transition-colors"
                  data-active="false"
                >
                  ↑ Asc
                </button>
                <button
                  id="sortDesc"
                  class="flex-1 rounded bg-negroni-800 px-3 py-2 text-sm text-white border border-negroni-500 hover:bg-negroni-700 transition-colors"
                  data-active="true"
                >
                  ↓ Desc
                </button>
              </div>
            </div>

            <!-- RESET BUTTON -->
            <button
              id="reset"
              class="w-full rounded bg-tomato-500/20 px-3 py-2 text-sm text-tomato-500 border border-tomato-500/30 hover: bg-tomato-500/30 transition-colors"
            >
              Reset All
            </button>
          </div>
        </aside>

        <!-- MAIN CONTENT AREA -->
        <div class="flex-1">
          <!-- GRID -->
          <div
            class="grid grid-cols-1 gap-6 lg:gap-y-32 md:grid-cols-2"
            id="assets-grid"
          >
            {
              assets.map(
                (asset) =>
                  asset.published && (
                    <figure
                      data-free={asset.min_price === 0}
                      data-downloads={asset.downloads_count || 0}
                      data-views={asset.views_count || 0}
                      data-published={new Date(asset.published_at).getTime()}
                    >
                      <a href={`/assets/${asset.id}`}>
                        <img
                          class="w-full rounded-3xl shadow-2xl object-cover"
                          src={asset.cover_url}
                          alt={`Cover for ${asset.title}`}
                        />
                        <div class="mt-4 flex justify-between px-6">
                          <div>
                            <h3 class="text-sm text-negroni-500">
                              {asset.title}
                            </h3>
                            <p class="mt-1 text-lg font-medium leading-6 text-white">
                              {asset.short_text ||
                                "No description, just vibes."}
                            </p>
                          </div>
                          <p class="text-base text-tomato-500">
                            {asset.min_price === 0 ? "Free" : "Paid"}
                          </p>
                        </div>
                      </a>
                    </figure>
                  ),
              )
            }
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- FILTER SCRIPT -->
  <script>
    const price = document.getElementById("price") as HTMLSelectElement;
    const sortType = document.getElementById("sortType") as HTMLSelectElement;
    const sortAsc = document.getElementById("sortAsc") as HTMLButtonElement;
    const sortDesc = document.getElementById("sortDesc") as HTMLButtonElement;
    const reset = document.getElementById("reset") as HTMLButtonElement;
    const grid = document.getElementById("assets-grid") as HTMLElement;

    let sortDirection: "asc" | "desc" = "desc";

    const getFigures = () =>
      Array.from(grid.querySelectorAll<HTMLElement>("figure"));

    const updateSortButtons = () => {
      if (sortDirection === "asc") {
        sortAsc.dataset.active = "true";
        sortDesc.dataset.active = "false";
        sortAsc.classList.add("bg-negroni-800", "border-negroni-500");
        sortAsc.classList.remove("bg-negroni-900", "border-negroni-500/30");
        sortDesc.classList.add("bg-negroni-900", "border-negroni-500/30");
        sortDesc.classList.remove("bg-negroni-800", "border-negroni-500");
      } else {
        sortAsc.dataset.active = "false";
        sortDesc.dataset.active = "true";
        sortDesc.classList.add("bg-negroni-800", "border-negroni-500");
        sortDesc.classList.remove("bg-negroni-900", "border-negroni-500/30");
        sortAsc.classList.add("bg-negroni-900", "border-negroni-500/30");
        sortAsc.classList.remove("bg-negroni-800", "border-negroni-500");
      }
    };

    const apply = () => {
      let figures = getFigures();

      // FILTER
      figures.forEach((f) => {
        const free = f.dataset.free === "true";

        const priceOk =
          !price.value ||
          (price.value === "free" && free) ||
          (price.value === "paid" && !free);

        f.style.display = priceOk ? "" : "none";
      });

      // SORT
      figures = figures.sort((a, b) => {
        let comparison = 0;

        switch (sortType.value) {
          case "downloads":
            comparison =
              Number(b.dataset.downloads) - Number(a.dataset.downloads);
            break;
          case "views":
            comparison = Number(b.dataset.views) - Number(a.dataset.views);
            break;
          default:
            comparison =
              Number(b.dataset.published) - Number(a.dataset.published);
        }

        return sortDirection === "asc" ? -comparison : comparison;
      });

      figures.forEach((f) => grid.appendChild(f));
    };

    // Event listeners
    price.addEventListener("change", apply);
    sortType.addEventListener("change", apply);

    sortAsc.addEventListener("click", () => {
      sortDirection = "asc";
      updateSortButtons();
      apply();
    });

    sortDesc.addEventListener("click", () => {
      sortDirection = "desc";
      updateSortButtons();
      apply();
    });

    reset.addEventListener("click", () => {
      price.value = "";
      sortType.value = "published";
      sortDirection = "desc";
      updateSortButtons();
      apply();
    });
  </script>
</Layout>
