---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";
import Container from "@/components/Container.astro";
import Heading from "@/components/Heading.astro";
import { links } from "@/lib/sociallinks";
---

<Layout title="Socials | Aspecs Gaming">
  <main class="bg-white">
    <!-- Header Section (Technical Dark Style) -->
    <Section class="relative bg-charcoal-900 pt-32 pb-16 overflow-hidden">
      <!-- Background Patterns -->
      <div class="absolute inset-0 -z-10 overflow-hidden">
        <div
          class="absolute inset-0 bg-[linear-gradient(to_right,#ffffff05_1px,transparent_1px),linear-gradient(to_bottom,#ffffff05_1px,transparent_1px)] bg-[size:40px_40px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]"
        >
        </div>
        <div
          class="absolute inset-0 bg-[radial-gradient(#ffffff08_1px,transparent_1px)] [background-size:20px_20px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_80%,transparent_100%)]"
        >
        </div>
        <div
          class="absolute inset-0 opacity-[0.03] mix-blend-overlay pointer-events-none"
          style="background-image: url('https://grainy-gradients.vercel.app/noise.svg');"
        >
        </div>
        <div
          class="absolute inset-0 bg-gradient-to-b from-transparent via-charcoal-900/50 to-charcoal-900"
        >
        </div>
      </div>

      <Container class="relative z-10 text-center">
        <Heading class="mx-auto prose-invert">
          <h1
            slot="heading-title"
            class="text-white text-5xl md:text-7xl font-black tracking-tighter mb-4 leading-[0.9]"
          >
            Follow <span
              class="inline-block text-transparent bg-clip-text bg-gradient-to-r from-tomato-500 to-negroni-400 italic pr-4"
              >Aspecs</span
            >
          </h1>
          <p
            slot="heading-content"
            class="text-negroni-200/60 text-lg max-w-xl mx-auto"
          >
            Stay updated with our latest releases, development logs, and
            occasional behind-the-scenes chaos.
          </p>
        </Heading>
      </Container>
    </Section>

    <!-- Social Links Section -->
    <Section>
      <Container class="max-w-2xl">
        <ul class="grid grid-cols-1 gap-4">
          {
            links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="group block bg-charcoal-50 border border-charcoal-100 text-charcoal-900 text-lg font-bold py-6 px-8 rounded-3xl transition-all hover:bg-charcoal-900 hover:text-white hover:scale-[1.02] active:scale-[0.98] shadow-sm hover:shadow-2xl"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <div class="flex items-center justify-between">
                    <span class="tracking-tight">{link.label}</span>
                    <i class="ri-arrow-right-up-line text-charcoal-300 group-hover:text-tomato-500 transition-colors text-2xl" />
                  </div>
                </a>
              </li>
            ))
          }
        </ul>
      </Container>
    </Section>
  </main>
</Layout>
