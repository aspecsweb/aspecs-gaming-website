---
import Layout from "@/layouts/Layout.astro";
import { links } from "@/lib/sociallinks";
---

<Layout>
  <main>
    <div class="relative mx-auto px-8 max-w-3xl py-20 md:px-12 text-center">
      <h1 class="text-negroni-500 text-4xl md:text-5xl font-bold mb-6">
        Follow Aspecs Gaming
      </h1>
      <p class="text-white text-lg mb-12">
        Updates, sneak peeks, and occasional chaos.
      </p>

      <ul class="space-y-6 gap-6">
        {
          links.map((link) => (
            <li>
              <a
                href={link.href}
                onclick={`track('FollowOn', { platform: '${link.label}' })`}
                class="block bg-negroni-500 text-white text-lg font-bold py-4 px-6 rounded-full shadow-lg transform transition-transform hover:scale-105 hover:shadow-xl"
                target="_blank"
                rel="noopener noreferrer"
              >
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </main>
</Layout>
