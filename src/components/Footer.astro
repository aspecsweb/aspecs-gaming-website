---
import { links } from "@/lib/sociallinks";

const currentYear = new Date().getFullYear();
---

<footer class="bg-charcoal-50 border-t border-charcoal-100 pt-24 pb-12">
  <div class="max-w-7xl mx-auto px-6 md:px-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-16">
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <a
          href="/"
          class="text-2xl font-bold text-charcoal-900 mb-6 block hover:text-tomato-600 transition-colors"
        >
          Aspecs Gaming
        </a>
        <p class="text-charcoal-600 max-w-sm leading-relaxed">
          Crafting premium game assets and resources for the next generation of
          indie developers.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3
          class="text-charcoal-900 font-bold mb-6 uppercase tracking-wider text-sm"
        >
          Explore
        </h3>
        <ul class="space-y-4">
          <li>
            <a
              href="/assets"
              class="text-charcoal-600 hover:text-tomato-600 transition-colors"
              >Asset Store</a>
          </li>
          <li>
            <a
              href="/socials"
              class="text-charcoal-600 hover:text-tomato-600 transition-colors"
              >Socials</a>
          </li>
          <li>
            <a
              href="/imprint"
              class="text-charcoal-600 hover:text-tomato-600 transition-colors"
              >Imprint</a>
          </li>
        </ul>
      </div>

      <!-- Socials -->
      <div>
        <h3
          class="text-charcoal-900 font-bold mb-6 uppercase tracking-wider text-sm"
        >
          Connect
        </h3>
        <ul class="space-y-4">
          {
            links.map((link) => (
              <li>
                <a
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-charcoal-600 hover:text-tomato-600 transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="pt-8 border-t border-charcoal-200 flex flex-col md:flex-row justify-between items-center gap-6"
    >
      <p class="text-sm text-charcoal-400">
        &copy; {currentYear}
        <a
          href="https://www.aspecs.ch"
          class="hover:text-charcoal-900 transition-colors font-medium"
          >Aspecs</a
        >. All rights reserved.
      </p>
      <div class="flex gap-8 text-sm text-charcoal-400">
        <a href="/imprint" class="hover:text-charcoal-900 transition-colors"
          >Privacy Policy</a
        >
        <a href="/imprint" class="hover:text-charcoal-900 transition-colors"
          >Terms of Service</a
        >
      </div>
    </div>
  </div>
</footer>
